                    <View android:background="#dddddd" android:layout_width="1dp" android:layout_height="32dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                    <ImageView android:id="@id/emergencyPoliceIcon" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="12dp" android:src="@drawable/police_icon" android:tint="#ffffff" android:layout_centerHorizontal="true" />
                    <TextView android:textSize="14sp" android:textColor="#ffffff" android:id="@id/emergencyPoliceText" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="6dp" android:text="Police" android:layout_below="@id/emergencyPoliceIcon" android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <RelativeLayout android:id="@id/emergencyFireStationContainer" android:layout_width="90dp" android:layout_height="-1">
                    <View android:background="#dddddd" android:layout_width="1dp" android:layout_height="32dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                    <ImageView android:id="@id/emergencyFireStationIcon" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="12dp" android:src="@drawable/firestation_icon" android:tint="#ffffff" android:layout_centerHorizontal="true" />
