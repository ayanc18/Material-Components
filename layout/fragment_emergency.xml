        <HorizontalScrollView android:id="@id/emergencyScrollView" android:background="@color/colorPrimary" android:layout_width="-1" android:layout_height="64dp">
            <LinearLayout android:orientation="0" android:layout_width="-2" android:layout_height="-1">
